<h2>{{title}}</h2>

{{videoURL}}

<h3>Learn by sharing</h3>
<form id="comment" action="/comment/new/{{_id}}" method="post">
    <input type="text" name="comment" id="comment">
    <button type="submit">Publish Comment</button>
</form>


{{#if comments}}

    {{#each comments}}
        <p>{{comment}}</p>
        <h6>{{author.fullName}}</h6>

    {{/each}}

{{/if}}

{{#if comments}}
<a href="/edit/comment"></a>

{{/comments}}

