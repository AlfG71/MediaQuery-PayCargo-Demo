
{{#if user}}

<h2>{{user.fullName}}'s Profile</h2>

<form action="/user/profile/edit" method="POST" enctype="multipart/form-data">

    <label> Full name
      <input type="text" name="fullName" value="{{user.fullName}}" />
    </label>



    <label> Profile picture
      <input type="file" name="imageurl" />
    </label>

    <img src={{user.imageurl}} alt="user">

    <label> Email
      <input type="text" name="email" value={{user.email}} />
    </label>

    <label> Password
      <input type="password" name="password" value={{user.password}} />
    </label>

  <button type="submit">Confirm changes</button>
</form>

<br>
<form action="/user/profile/delete" method="POST">
  <button onclick="window.prompt("Are you sure?")" type="submit">Delete account</button>
</form>
<form action="" method="POST">
  <button onclick="deletePrompt()" type="submit">Check account</button>
</form>
